
public class ZigZag {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr[] = {1,2,3,4,5,6};
		int n = arr.length;
		boolean lessFlag = true; // initial order <
        for (int i = 0;i < n-1;i++) {
            if (lessFlag) { // <
                if (arr[i] > arr[i+1]) {
                    // do swap
                    int tmp = arr[i];
                    arr[i] = arr[i+1];
                    arr[i+1] = tmp;
                }
                lessFlag = false;
            } else { // >
                if (arr[i] < arr[i+1]) {
                    // do swap
                    int tmp = arr[i];
                    arr[i] = arr[i+1];
                    arr[i+1] = tmp;
                }
                lessFlag = true;
            }
        }
	}

}
